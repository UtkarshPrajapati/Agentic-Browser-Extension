{
  "manifest_version": 3,
  "name": "Agent Sidebar (Comet-style)",
  "version": "0.1.0",
  "description": "Interactive sidebar agent with visible in-tab actions, powered by OpenRouter and MCP.",
  "permissions": ["tabs", "storage", "activeTab"],
  "host_permissions": ["*://*/*"],
  "background": { "scripts": ["sw.js"], "type": "module" },
  "sidebar_action": { "default_title": "Agent Sidebar", "default_panel": "sidepanel.html" },
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["content.js"], "run_at": "document_idle" }]
}

